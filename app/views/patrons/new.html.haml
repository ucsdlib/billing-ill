%section.create.container
  .row
    .col-sm-8.col-sm-offset-1
      = bootstrap_form_for @patron do |f|
        = render 'shared/content_title', title: "Create a New Patron"
        = render 'shared/error_messages', obj: @patron
        = render 'form', f: f
        = f.select :country_code, @country_list, {include_blank: 'Choose Country'}, { label: "Country" }
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            %input(type="submit" value="Save" class="btn btn-primary")
            %input(type="reset" value="Cancel" class="btn btn-default")