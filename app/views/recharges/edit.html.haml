%section.create.container
  .row
    .col-sm-8.col-sm-offset-1
      = bootstrap_form_for @recharge do |f|
        = render 'shared/content_title', title: "Edit a Recharge" 
        = render 'shared/error_messages', obj: @recharge
        %fieldset
          .required
            = f.text_field :document_num, label: "Document Number(1 ~ 999)"
          .required
            = f.select :fund_id, options_for_select(@index_list, selected: @selected_index), { label: "Index ID" }
          .required
            = f.text_field :number_copies, label: "Number of Copies"
          .required
            = f.text_field :charge, label: "Charge"
          .required
            = f.select :status, options_for_select(["active", "pending"], selected: @selected_status)
          = f.text_area :notes, label: "Notes", rows: 6
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            %input(type="submit" value="Save" class="btn btn-primary")
            %input(type="reset" value="Cancel" class="btn btn-default")
            = link_to "Go to index page", recharges_path, method: :get, class: 'btn btn-default'