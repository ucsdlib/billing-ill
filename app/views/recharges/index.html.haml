%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2
            There is total #{@total_count} recharges
        %table.table
          %thead
            %tr
              %th{ width: "15%" } Recharge ID
              %th{ width: "15%" } Document Number
              %th{ width: "15%" } Charge
              %th{ width: "15%" } Status
              %th{ width: "15%" } Number of Copies
              %th{ width: "15%" } Fund_ID
              %th{ width: "15%" } Creation Date
              %th{ width: "15%" } Link
          %tbody
            - if @recharges
              - @recharges.each do |recharge|
                %tr
                  %td
                    = recharge.id
                  %td
                    = recharge.document_num
                  %td
                    $
                    = recharge.charge
                  %td
                    = recharge.status
                  %td
                    = recharge.number_copies
                  %td
                    = recharge.fund_id
                  %td
                    = convert_date_mmddyy(recharge.created_at)
                  %td
                    = link_to edit_recharge_path(recharge.id) do
                      %i.glyphicon.glyphicon-pencil
          .pagination-wrapper
            = paginate @recharges if @recharges
